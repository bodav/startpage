---
import BackgroundWrapper from "../layouts/BackgroundWrapper.astro";
import BookmarkGrid from "../components/BookmarkGrid.astro";
import Footer from "../components/Footer.astro";

import { getEntry } from "astro:content";

const settings = await getEntry("settings", "startpage");

console.log(settings);
---

<BackgroundWrapper
  title={settings.data.title}
  theme={settings.data.theme}
  background={settings.data.background}
>
  <BookmarkGrid bookmarks={settings.data.bookmarks} />
  <Footer lanUrl={settings.data.lanUrl} />
</BackgroundWrapper>
